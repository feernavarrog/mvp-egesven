<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <!-- Bootstrap CSS -->
    <link href="/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/admin-readUserStyle.css" rel="stylesheet">
</head>

<body onload="getAllRoomsREM()">
    <!-- Inclui el menú superior -->
    <%- include('menu') %>
    <!-- Contenido principal -->
    <div class="container mt-5">
        <h1 class="text-center">Panel de Administración</h1>
        <div class="text-center mt-4">
            <table class="table table-striped table-hover table-dark mt-3 custom-table" id="userTable">
                <thead>
                    <tr>
                        <th>Numero</th>
                        <th>Categoria</th>
                        <th>Precio</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="userTableBody">
                    <!-- Los usuarios se poblarán aquí -->
                </tbody>
            </table>
            <!-- Botones para crear un nuevo usuario y volver a home -->
            <button class="btn btn-success mt-3" onclick="window.location.href='/adminRoomForm'">Crear Nueva Habitacion</button>
            <button class="btn btn-secondary mt-3" onclick="window.location.href='/adminPannel'">Volver</button>
        </div>
    </div>
    
    <!-- Bootstrap JS y las dichosas dependencias -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/js/roomManager.js"></script>     
</body>