<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <!-- Bootstrap CSS -->
    <link href="/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/admin-readUserStyle.css" rel="stylesheet">
</head>

<body onload="getAllRoomsForClient()">
    <!-- Inclui el menú superior -->
    <%- include('menu') %>
    <!-- Contenido principal -->
    <div class="container mt-5">
        <h1 class="text-center">Catalogo de Habitaciones</h1>
        <div class="text-center mt-4">
            <table class="table table-striped table-hover table-dark mt-3 custom-table" id="userTable">
                <thead>
                    <tr>
                        <th>Numero</th>
                        <th>Categoria</th>
                        <th>Precio</th>
                        <th>Ir</th>
                    </tr>
                </thead>
                <tbody id="userTableBody">
                    <!-- Los usuarios se poblarán aquí -->
                </tbody>
            </table>
        </div>
        <!-- Botón para volver a Home -->
        <div class="text-center mt-4">
            <button type="button" class="btn btn-primary" onclick="window.location.href='/newHome'">Volver a Home</button>
        </div>
    </div>

    <!-- Bootstrap JS y las dichosas dependencias -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/js/roomManager.js"></script>   
</body>